{
  "name": "wanforge-github-io",
  "description": "Sugeng Sulistiyawan Portfolio",
  "version": "1.0.0",
  "author": "Sugeng Sulistiyawan",
  "browserslist": [
    "defaults"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wanforge/wanforge.github.io.git"
  },
  "license": "CC-BY-SA-4.0",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "npm run start",
    "init": "shx rm -rf .git && git init -b main",
    "create": "hugo new",
    "prestart": "npm run clean",
    "start": "hugo server --buildDrafts --buildFuture --disableFastRender",
    "prebuild": "npm run clean",
    "build": "hugo --gc --minify",
    "clean": "shx rm -rf public resources",
    "clean:install": "shx rm -rf package-lock.json node_modules",
    "lint": "npm run -s lint:scripts && npm run -s lint:styles && npm run -s lint:markdown",
    "lint:scripts": "eslint assets/js",
    "lint:styles": "stylelint \"assets/scss/**/*.scss\" --cache",
    "lint:markdown": "markdownlint-cli2 \"*.md\" \"content/**/*.md\" \"!node_modules\" \"!CHANGELOG.md\" \"!README.md\"",
    "test": "npm run -s lint",
    "generate-cv-pdf": "node scripts/generate-cv-pdf.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.24",
    "@babel/core": "^7.24",
    "@babel/preset-env": "^7.24",
    "@eslint/js": "^9.31.0",
    "@fullhuman/postcss-purgecss": "^7.0",
    "@hyas/images": "^3.2.0",
    "auto-changelog": "^2.4",
    "autoprefixer": "^10.4",
    "bootstrap": "^5.3.3",
    "clipboard": "^2.0",
    "eslint": "^9.32",
    "exec-bin": "^1.0.0",
    "flexsearch": "^0.8.205",
    "highlight.js": "^11.9",
    "hugo-extended": "^0.148.1",
    "instant.page": "^5.1",
    "katex": "^0.16",
    "lazysizes": "^5.3",
    "markdownlint-cli2": "^0.18.0",
    "netlify-plugin-submit-sitemap": "^0.4.0",
    "node-fetch": "^3.3",
    "postcss": "^8.4",
    "postcss-cli": "^11.0",
    "puppeteer": "^24.15.0",
    "purgecss-whitelister": "^2.4",
    "shx": "^0.4.0",
    "stylelint": "^16.22",
    "stylelint-config-standard-scss": "^15.0"
  },
  "otherDependencies": {
    "hugo": "0.148.1"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
